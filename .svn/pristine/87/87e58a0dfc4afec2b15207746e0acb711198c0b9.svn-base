page {
  background: #eee;
}
.login {
  width: 100%;
  height: 24%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 10px;
}
.login .loginImg {
  width: 100px;
  height: 100px;
  border: 2px solid #b0d3fd;
  border-radius: 50%;
  text-align: center;
}
.login .loginImg .login-head {
  width: 90px;
  height: 90px;
  border: 1px solid #b0d3fd;
  border-radius: 50%;
  margin-left: 4px;
  margin-top: 4px;
  text-align: center;
}
.login .loginImg .login-head image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.login-center {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 24px;
}
.login-center .login-keys {
  width: 90%;
  height: 30px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.senior {
  width: 86%;
  padding: 0 7%;
  font-size: 30rpx;
}
.senior .password {
  width: calc(100% - 90rpx);
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-radius: 45rpx;
  background-color: rgba(150, 150, 150, 0.1);
  padding: 0 45rpx;
  margin-bottom: 26rpx;
}
.senior .password input {
  width: 100%;
  height: 50rpx;
  color: rgba(34, 34, 34, 0.8);
  font-weight: 200;
}
.senior .btn {
  color: #ffffff;
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-radius: 45rpx;
  background-color: #4A8DD6;
  font-size: 40rpx;
}
.tip {
  background: #F7F7F7;
  margin: 0 7%;
  margin-top: 30px;
  padding: 20px 0;
  border-radius: 5px;
}
.tip .tips1, .tip .tips2 {
  padding-left: 10px;
  display: block;
  font-size: 0.7rem;
  color: #777;
}
.tip .tips1 .bottom, .tip .tips1 .top, .tip .tips2 .bottom, .tip .tips2 .top {
  text-align: center;
}
.tip .tips2 ._span {
  color: red;
}
.block {
  display: block;
  position: relative;
  content: '';
  height: 1px;
  width: 90%;
  background: #888;
  margin: 10px auto;
}

