page {
  background: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background: -webkit-linear-gradient(top, #ffffff 0%, #ffffff 100%);
  background: linear-gradient(to bottom, #ffffff 0%, #ffffff 100%);
  height: 100%;
}
.icon {
  color: #ffffff;
}
.form {
  width: 86%;
  padding: 0 7%;
  font-size: 30rpx;
}
.form .user,
.form .username,
.form .password,
.form .code {
  width: calc(100% - 90rpx);
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-radius: 45rpx;
  background-color: rgba(150, 150, 150, 0.1);
  padding: 0 45rpx;
  margin-bottom: 26rpx;
}
.form .user input,
.form .username input,
.form .password input,
.form .code input {
  width: 100%;
  height: 50rpx;
  color: rgba(34, 34, 34, 0.8);
  font-weight: 200;
}
.form .btn {
  color: #ffffff;
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
